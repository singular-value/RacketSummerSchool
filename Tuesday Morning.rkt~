#lang racket

(define-syntax (where stx)
  (syntax-parse stx
    [(_ body:expr
        [name:id rhs:expr])
     ******]))

(check-equal? (where (+ my-favorite-number 2) [my-favorite-number 8])
              (let ([my-favorite-number 8]) (+ my-favorite-number 2)))

(check-equal? (where (op 5) [op (lambda (x) (+ x x))])
              (let ([op (lambda (x) (+ x x))]) (op 5)))