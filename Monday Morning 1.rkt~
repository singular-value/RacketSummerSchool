#lang racket

(require (for-syntax racket/list))

;; SYNTAX
;; (define-hello world) means the identifier 'world' is bound to "good bye"
;; translate this to code of the shape (define 2nd-of-given-syntax "good bye")


(define-syntax (define-hello stx)
  (define id (second (syntax->list stx)))
  (displayln id)
  #`(define #,id "good bye"))

(define-hello world)
world